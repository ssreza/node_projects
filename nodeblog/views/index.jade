extends layout

block content
  if posts
    each post, i in posts
      .row
        h1
          a(href='/posts/show/#{post._id}')
            | #{post.title}
        p.meta Posted in 
          a(href='/categories/show/#{post.category}') #{post.category} 
          | by #{post.author} on #{moment(post.date).format("MM-DD-YYYY")}
        img(src='/images/#{post.mainimage}', height=200)
        p 
          !=truncateText(post.body, 300) 
          p
            a.more(href='/posts/show/#{post._id}') Read More